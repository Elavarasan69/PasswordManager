<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_marginStart="@dimen/card_marginStart"
    android:layout_marginTop="@dimen/car_marginTop"
    android:layout_marginEnd="@dimen/card_marginEnd"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/card_radius">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/websiteLogo_iv"
                android:layout_width="@dimen/website_logo"
                android:layout_height="@dimen/website_logo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/logo_Start"
                android:layout_marginTop="@dimen/logo_top"
                android:layout_marginBottom="@dimen/logo_bottom"
                android:src="@drawable/pwd" />

            <TextView
                android:id="@+id/websiteName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/websiteName_top"
                android:layout_marginEnd="@dimen/websiteName_End"
                android:width="@dimen/websiteName_width"
                android:height="@dimen/websiteName_height"
                android:text="Facebook"
                android:textColor="@color/background_gradient_end"
                android:textSize="@dimen/websiteName_text" />

            <ImageView
                android:id="@+id/copy_iv"
                android:layout_width="@dimen/copy_width"
                android:layout_height="@dimen/copy_height"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/copy_top"
                android:layout_marginEnd="@dimen/copy_end"
                android:layout_toStartOf="@+id/copy_tv"
                android:src="@drawable/ic_baseline_content_copy_24" />

            <TextView
                android:id="@+id/copy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/websiteName_tv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/copyText_top"
                android:layout_marginEnd="@dimen/copyText_end"
                android:layout_marginBottom="@dimen/copyText_bottom"
                android:width="@dimen/copyText_width"
                android:height="@dimen/copyText_height"
                android:text="Copy Password"
                android:textColor="@color/background_gradient_end"
                android:textSize="@dimen/copyText_text" />

        </RelativeLayout>

        <TextView
            android:id="@+id/website_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/website_top"
            android:layout_marginBottom="@dimen/website_bottom"
            android:gravity="center"
            android:text="@string/www_facebook_com"
            android:textSize="@dimen/website_text" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>

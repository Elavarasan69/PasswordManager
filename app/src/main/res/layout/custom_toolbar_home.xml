<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_toolbar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/background_gradient_end">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="78dp">

        <ImageView
            android:id="@+id/burger_iv"
            android:layout_width="@dimen/burger_width"
            android:layout_height="@dimen/burger_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/burger_start"
            android:layout_marginTop="@dimen/burger_top"
            android:layout_marginBottom="16dp"
            android:src="@drawable/burger_menu" />

        <ImageView
            android:id="@+id/textLogo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/textLogo_top"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/search_iv"
            android:layout_toEndOf="@+id/burger_iv"
            android:width="@dimen/textLogo_width"
            android:height="@dimen/textLogo_height"
            android:src="@drawable/pass_manager" />

        <ImageView
            android:id="@+id/search_iv"
            android:layout_width="@dimen/search_width"
            android:layout_height="@dimen/search_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="18dp"
            android:layout_toStartOf="@+id/sync_iv"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/sync_iv"
            android:layout_width="@dimen/sync_width"
            android:layout_height="@dimen/sync_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/sync_top"
            android:layout_marginEnd="34.3dp"
            android:layout_marginBottom="17.11dp"
            android:layout_toStartOf="@+id/profile_iv"
            android:src="@drawable/sync_icn" />

        <ImageView
            android:id="@+id/profile_iv"
            android:layout_width="@dimen/profile_width"
            android:layout_height="@dimen/profile_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/profile_top"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/profile" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>